        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <!--Employee相关的Servlet配置-->
    <!--由zzh187维护-->
    <servlet>
        <servlet-name>EmployeeIndex</servlet-name>
        <servlet-class>OSMsoft.EmployeeAction.EmployeeIndex</servlet-class>
    </servlet>
