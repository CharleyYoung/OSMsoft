    <servlet>
        <servlet-name>DestroySessionForEmployee</servlet-name>
        <servlet-class>OSMsoft.EmployeeAction.DestroySessionForEmployee</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DestroySessionForEmployee</servlet-name>
        <url-pattern>/DestroySessionForEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManageInformation</servlet-name>
        <servlet-class>OSMsoft.EmployeeAction.ManageInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageInformation</servlet-name>
        <url-pattern>/ManageInformation</url-pattern>
    </servlet-mapping>
